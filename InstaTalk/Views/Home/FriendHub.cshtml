@model RoomViewModel

@{
    ViewData["Title"] = "Home";
}

@section customHead {
    <link rel="stylesheet" href="~/css/home_friendhub.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
}

<div class="modal fade" id="ModalJoinRoom" tabindex="-1" aria-labelledby="ModalJoinRoomTitle" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="join-box modal-content">
            <form>
                <div class="user-box">
                    <input type="text" name="" required="">
                    <label>Room ID or URL</label>
                </div>
                <div class="user-box">
                    <input type="password" name="" required="">
                    <label>Password</label>
                </div><center>
                    <a href="#" onclick="location.href='@Url.Action("Meeting", "Room")'">
                        Join
                        <span></span>
                    </a>
                </center>
            </form>
        </div>
    </div>
</div>

<div class="min-vh-100 d-flex align-items-center justify-content-center flex-column w-100">
    <div class="d-flex flex-column justify-content-center align-items-center text-center p-4 col-10">
        <div style="max-width:550px;">
            <img class="img-fluid" id="homepage_logo" src="~/asset/image/logo.png" alt="logo">
            <form id="homepage_form" class="w-100" method="post">
                <center>
                    @* <div class="textInputWrapper" style="margin: 1rem 0rem 1rem 0rem;">
                        <input placeholder="Your display name" type="text" class="textInput">
                    </div> 

                    <a class="custom-btn me-2" style="font-size: 12px; width: 13rem;" onclick="location.href='@Url.Action("Meeting","Room")';">
                        Create a Room
                        <span></span>
                    </a> *@
                    <div class="form-group">
                        <button class="btn btn-danger" asp-action="CreateRoom" asp-controller="Home" type="submit">Create a room</button>
                    </div>
                    <a class="custom-btn ms-2" style="font-size: 12px; width: 13rem;" data-bs-toggle="modal" data-bs-target="#ModalJoinRoom">
                        Join a Room
                        <span></span>
                    </a>
                </center>
                
            </form>
        </div>
        
    </div>
</div>
@section script {
    <script src="~/js/home_friendhub.js" asp-append-version="true"></script>
}



