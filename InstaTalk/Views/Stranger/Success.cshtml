@{
    ViewData["Title"] = "Stranger";
}

@section customHead {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
}

<div class="min-vh-100 d-flex align-items-center justify-content-center flex-column w-100">
    <div class="d-flex flex-column justify-content-center align-items-center text-center p-4 col-10">
        <div style="max-width:450px;">
            <img class="img-fluid" id="homepage_logo" src="~/asset/image/logo.png" alt="logo">
        </div>
        <h1 class="mb-4"><span>Phuc</span> want to connect with you</h1>
        <form id="homepage_form" class="w-100">
            <button type="button" class="btn btn-primary me-2" style="max-width: 250px;" onclick="location.href='@Url.Action("Meeting2Peer","Stranger")';">Accept</button>
            <button type="button" class="btn btn-primary ms-2" style="max-width: 250px;" onclick="location.href='@Url.Action("Matching","Stranger")';">Decline</button>
        </form>
    </div>
</div>
