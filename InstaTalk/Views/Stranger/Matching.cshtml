@{
    ViewData["Title"] = "Stranger";
}

@section customHead {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
}

<div class="modal fade" id="ModalFinderSettings" tabindex="-1" aria-labelledby="ModalJoinRoomTitle" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalJoinRoomTitle">Finder Settings</h5>
                <button id="btn-icon-visibility" class="bg-white py-2 ps-0 d-flex justify-content-center" type="button" data-bs-dismiss="modal" aria-label="Close" style="border:none;">
                    <span class="material-icons" id="icon_close_modal_join_room">
                        clear
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form_join_mate_room">
                    <div class="m-auto" style="max-width:450px;">
                        <select class="form-select mb-3" aria-label=".form-select-lg example">
                            <option selected>You want to find</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="m-auto d-flex" style="max-width:450px;">
                        <select class="form-select mb-3 me-1" aria-label=".form-select-lg example" style="width:49%;">
                            <option selected>Whose age is</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <select class="form-select mb-3 ms-1" aria-label=".form-select-lg example" style="width:49%;">
                            <option selected>And come from</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                            Accept attendees automatically
                        </label>
                    </div>
                    <div class="w-100 text-center">
                        <button type="submit" class="btn btn-primary me-2">Join</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="min-vh-100 d-flex align-items-center justify-content-center flex-column w-100">
    <div class="d-flex flex-column justify-content-center align-items-center text-center p-4 col-10">
        <div style="max-width:550px;">
            <div class="loader"></div>
        </div>
        <text class="mb-4" style="font-size: 32px; text-transform: uppercase; letter-spacing: 0.25rem; color: white;  margin:2rem 0rem 1rem 0rem">No one matches to your finder settings</text>
        <div id="homepage_form" class="w-100">
            <a class="custom-btn" data-bs-toggle="modal" data-bs-target="#ModalFinderSettings" style="width: 20rem; font-size: 14px">
                Change finder settings
                <span></span>
            </a>
            <a class="custom-btn" onclick="location.href='@Url.Action("Waiting","Stranger")'" style="width: 20rem; font-size: 14px">
                Keep on waiting
                <span></span>
            </a>
        </div>
    </div>
</div>
